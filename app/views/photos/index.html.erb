<% 
  if user_signed_in?
%>
<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th>Page name</th>
      <th>Caption</th>
      <th>Sequence</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos = Photo.all.order('page_name ASC, sequence ASC')%>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.page_name %></td>
        <td><%= photo.caption %></td>
        <td><%= photo.sequence %></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= button_to('Delete', photo, method: "delete", remote: true, data: { confirm: 'Are you sure?', disable_with: 'loading...' }) %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_photo_path %>
<% else 
  controller.redirect_to "/users/sign_in"
end %>
